{
    "compilerOptions": {
        "outDir": "./build/",
        "baseUrl": ".",
        "paths": {
            "@src/*": ["./src/*"]
        },
        "noImplicitAny": true,
        "module": "ES2022",
        "target": "ES2024",
        "allowJs": false,
        "moduleResolution": "node"
    },
    "include": ["./src/**/*"],
    "exclude": ["**/*.spec.ts"]
}
